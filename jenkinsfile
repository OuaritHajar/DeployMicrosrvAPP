pipeline {
    agent any
    environment {
        AWS_DEFAULT_REGION = 'us-east-1' 
    }
    stages {
        stage('Clone repository') {
            steps {
                 script{
                     git(
                         url: "https://github.com/OuaritHajar/DeployMicrosrvAPP",
                         branch: "main",
                         changelog: true,
                         poll: true
                        )
                 }
            } 
        }
       stage('Build the images') {
            steps {
               sh 'docker build -t app -f api/Dockerfile .'
               sh 'docker build -t client -f client/Dockerfile .'
            }
        }

        stage('tag the images') {
            steps {
                sh 'docker tag app 175817389458.dkr.ecr.us-east-1.amazonaws.com/repository:app'
                sh 'docker tag client 175817389458.dkr.ecr.us-east-1.amazonaws.com/repository:client'
            }
        }
        stage('Push to ECR') {
            steps {
                script {
                    withAWS(credentials: 'aws-key', region:'${AWS_DEFAULT_REGION}') {
                         sh "aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 175817389458.dkr.ecr.us-east-1.amazonaws.com"
                         sh 'docker push 175817389458.dkr.ecr.us-east-1.amazonaws.com/repository:app'
                         sh 'docker push 175817389458.dkr.ecr.us-east-1.amazonaws.com/repository:client'             
                    }
                }
           }
        }
        stage('Deploy with docker compose'){
            steps {
                script {
                   sshagent(credentials: ['aws-private-key']) {
                    def EC2_INSTANCE_IP = 'ec2-3-94-85-197.compute-1.amazonaws.com'
                    sh "ssh -o StrictHostKeyChecking=no ubuntu@${EC2_INSTANCE_IP} 'mkdir -p ~/deploy'"
                    sh "scp -o StrictHostKeyChecking=no docker-compose.yml ubuntu@${EC2_INSTANCE_IP}:~/deploy/"
                    sh "ssh -o StrictHostKeyChecking=no ubuntu@${EC2_INSTANCE_IP} 'cd ~/deploy && \
                         export AWS_DEFAULT_REGION=us-east-1 && \
                         export DOCKER_LOGIN=\$(aws ecr get-login-password) && \
                         docker login -u AWS -p \$DOCKER_LOGIN && \
                         docker-compose up -d'"
                    }
                }
            }    
           
        }
    }
}

