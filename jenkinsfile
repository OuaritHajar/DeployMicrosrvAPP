pipeline {
    agent any
    stages{
        stage('Clone repository'){
            git 'https://github.com/OuaritHajar/DeployMicrosrvAPP'
        
        }   
        stage('Build the images') {
            steps {
                sh 'docker-compose build'
            }
            post {
                success {
                    script {
                        app = docker.image("myapp:${env.BUILD_NUMBER}")
                    }
                }
            }
        }       

        stage('Test') {
            steps {
                sh 'echo "test passed"'
            }
        }

        stage('Deploy to ECR') {
            steps {
                script {
                    docker.withRegistry('public.ecr.aws/z8x8d4m6/repository', '202169348149') {
                        app.push("${env.BUILD_NUMBER}")
                    }
                }
            }
        } 
    } 
} 
