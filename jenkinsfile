pipeline {
    agent any
    stages {
        stage('Clone repository') {
            steps {
                 script{
                     git(
                         url: "https://github.com/OuaritHajar/DeployMicrosrvAPP",
                         branch: "main",
                         changelog: true,
                         poll: true
                        )
                 }
            } 
        }

        stage('Build the images') {
            steps {
                sh 'docker-compose build'
            }
            post {
                success {
                    script {
                        app = docker.image("myapp:${env.BUILD_NUMBER}")
                    }
                }
            }
        }

        stage('Test') {
            steps {
                sh 'echo "test passed"'
            }
        }

        stage('Login to AWS Credentials') {
            steps { withCredentials([ amazonWebServices(credentialsId: 'aws-key', accessKeyVariable: 'AWS_ACCESS_KEY_ID', secretKeyVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                    sh 'echo "AWS Access Key: $AWS_ACCESS_KEY_ID"'
                    sh 'echo "AWS Secret Key: $AWS_SECRET_ACCESS_KEY"'
                }
            }
        }
        stage('Push to ECR') {
            steps {
                script {
                    docker.withRegistry('https://501533612229.dkr.ecr.us-east-1.amazonaws.com/repository:latest','aws-key') {
                        app.push("${env.BUILD_NUMBER}")
                    }
                }
            }
        }
    }
}
