pipeline {
    agent any
    stages {
        stage('Clone repository') {
            steps {
                 script{
                     git "https://github.com/OuaritHajar/DeployMicrosrvAPP"
                        
                    }
                }
        }

        stage('Build the images') {
            steps {
                sh 'docker-compose build'
            }
            post {
                success {
                    script {
                        app = docker.image("myapp:${env.BUILD_NUMBER}")
                    }
                }
            }
        }

        stage('Test') {
            steps {
                sh 'echo "test passed"'
            }
        }

        stage('Deploy to ECR') {
            steps {
                script {
                    docker.withRegistry('https://057636725161.dkr.ecr.us-east-1.amazonaws.com/repository', 'aws-key') {
                        app.push("${env.BUILD_NUMBER}")
                    }
                }
            }
        }
    }
}
