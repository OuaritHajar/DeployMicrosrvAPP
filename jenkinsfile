pipeline {
    agent any
    environment {
        AWS_DEFAULT_REGION = 'us-east-1' 
    }
    stages {
        stage('Clone repository') {
            steps {
                 script{
                     git(
                         url: "https://github.com/OuaritHajar/DeployMicrosrvAPP",
                         branch: "main",
                         changelog: true,
                         poll: true
                        )
                 }
            } 
        }
       stage('Build the images') {
            steps {
               sh 'docker build -t app -f api/Dockerfile .'
               sh 'docker build -t client -f client/Dockerfile .'
            }
        }

        stage('tag the images') {
            steps {
                sh 'docker tag app 011793885524.dkr.ecr.us-east-1.amazonaws.com/repository:app'
                sh 'docker tag client 011793885524.dkr.ecr.us-east-1.amazonaws.com/repository:client'
            }
        }
        stage('Push to ECR') {
            steps {
                script {
                    withAWS(credentials: 'aws-key', region:'${AWS_DEFAULT_REGION}') {
                         sh "aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 011793885524.dkr.ecr.us-east-1.amazonaws.com"
                         sh 'docker push 011793885524.dkr.ecr.us-east-1.amazonaws.com/repository:app'
                         sh 'docker push 011793885524.dkr.ecr.us-east-1.amazonaws.com/repository:client'             
                    }
                }
           }
        }
     
    }
}
