pipeline {
    agent any
    stages {
        stage('Clone repository') {
            steps {
                 script{
                     git(
                         url: "https://github.com/OuaritHajar/DeployMicrosrvAPP",
                         branch: "main",
                         changelog: true,
                         poll: true
                        )
                 }
            } 
        }

        stage('Build the images') {
            steps {
               sh 'docker build -t app'
               sh 'docker build -t client'
               sh 'docker build -t mongo'
            }
        }

        stage('tag the images') {
            steps {
                sh 'docker tag app 501533612229.dkr.ecr.us-east-1.amazonaws.com/repository:app'
                sh 'docker tag app 501533612229.dkr.ecr.us-east-1.amazonaws.com/repository:client'
                sh 'docker tag app 501533612229.dkr.ecr.us-east-1.amazonaws.com/repository:mongo'
            }
        }
       
        stage('Push to ECR') {
            steps {
                script {
                   sh 'docker push 501533612229.dkr.ecr.us-east-1.amazonaws.com/repository:app'
                   sh 'docker push 501533612229.dkr.ecr.us-east-1.amazonaws.com/repository:client' 
                    sh 'docker push 501533612229.dkr.ecr.us-east-1.amazonaws.com/repository:mongo'             
                }
            }
        }
    }
}
