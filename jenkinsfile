pipeline {
    agent any
    stages {
        stage('Clone repository') {
            steps {
                 script{
                     git(
                         url: "https://github.com/OuaritHajar/DeployMicrosrvAPP",
                         branch: "main",
                         changelog: true,
                         poll: true
                        )
                 }
            } 
        }

        stage('Build the images') {
            steps {
               sh 'docker build 501533612229.dkr.ecr.us-east-1.amazonaws.com/repository:api'
               sh 'docker build 501533612229.dkr.ecr.us-east-1.amazonaws.com/repository:client'
            }
            steps {
                sh 'docker-compose build'
            }
        }

        stage('Test') {
            steps {
                sh 'echo "test passed"'
            }
        }
       
        stage('Push to ECR') {
            steps {
                script {
                   sh 'docker push 501533612229.dkr.ecr.us-east-1.amazonaws.com/repository:api'
                   sh 'docker push 501533612229.dkr.ecr.us-east-1.amazonaws.com/repository:client'         
                }
            }
        }
    }
}
